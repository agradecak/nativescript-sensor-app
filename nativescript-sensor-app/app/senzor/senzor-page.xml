<Page
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <NavigationButton visibility="hidden"></NavigationButton>
        <GridLayout columns="50, *">
            <Label class="action-bar-title" text="Senzor" colSpan="2"/>
            <Label class="fas" text="&#xf0c9;" tap="onDrawerButtonTap"/>
        </GridLayout>
    </ActionBar>

    <ScrollView orientation="vertical">
        <GridLayout class="page__content">
            <Label class="page__content-icon fas" text="&#xf2db;"></Label>
            <Label class="page__content-placeholder" text="<!-- Page content goes here -->"></Label>
        </GridLayout>

        <GridLayout marginTop="20" rows="auto, auto, auto, auto, auto" columns="20,*,*,20">
            <Label text="Ime:" fontSize="20" row="0" col="1" ></Label>
            <Label text="{{ ime }}" textAlignment="right" fontSize="20" row="0" col="2"></Label>


            <Label text="X os:" fontSize="{{ x_vel }}" row="1" col="1"></Label>
            <Label text="{{ x }}" textAlignment="right" fontSize="{{ x_vel }}" row="1" col="2"></Label>

            <Label text="Y os:" fontSize="{{ y_vel }}" row="2" col="1"></Label>
            <Label text="{{ y }}" textAlignment="right" fontSize="{{ y_vel }}" row="2" col="2"></Label>

            <Label text="Z os:" fontSize="{{ z_vel }}" row="3" col="1"></Label>
            <Label text="{{ z }}" textAlignment="right" fontSize="{{ z_vel }}" row="3" col="2"></Label>

            <Label text="Vrijeme:" fontSize="20" row="4" col="1"></Label>
            <Label text="{{ vrijeme }}" textAlignment="right" fontSize="20" row="4" col="2"></Label>

        </GridLayout>
    </ScrollView>
</Page>
